<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="com.bookstore.backend.dao.BookDao">
        <select id="findAllBook" resultType="Book">
            select * from book
        </select>

        <select id="findBookByKey" parameterType="String" resultType="Book">
            select * from book where title like '%${value}%'
        </select>

        <select id="findBookByCategory" parameterType="String" resultType="Book">
            select * from book where category = #{category}
        </select>

        <select id="getBookCommentsById" parameterType="String" resultType="Comment">
            select * from comment where book_id = #{book_id}
        </select>

        <select id="insertBookComment" parameterType="Comment">
            insert into comment values (#{user_id},#{book_id},#{date},#{comment})
        </select>

        <select id="deleteBookById" parameterType="String">
            delete from book where book_id = #{book_id}
        </select>

        <select id="addBook" parameterType="Book">
            insert into book values (#{book_id},#{title},#{author},#{publisher},#{language},#{isbn},#{size},#{weight},#{brand},#{category},#{price},#{picture},#{stock},#{sale},#{description})
        </select>

        <select id="updateBookSS" parameterType="String">
            update book set stock=stock-1,sale=sale+1 where book_id = #{book_id}
        </select>
    </mapper>